                            "wordIds": [ "รวม", "ทั้งหมด", "เท่าไหร่", "ครับ" ],
                            "translations": {
                                "en": "What's the total?",
                                "fa": "جمعاً چقدر می‌شود؟"
                            }
                        },
                        {
                            "source": "รวมห้าร้อยสามสิบเอ็ดบาทค่ะ",
                            "wordIds": [ "รวม", "ห้า", "ร้อย", "สาม", "สิบ", "เอ็ด", "บาท", "ค่ะ" ],
                            "translations": {
                                "en": "Total is 531 baht",
                                "fa": "جمعاً ۵۳۱ بات"
                            }
                        },
                        {
                            "source": "รับบัตรเครดิตไหมครับ",
                            "wordIds": [ "รับ", "บัตรเครดิต", "ไหม", "ครับ" ],
                            "translations": {
                                "en": "Do you accept credit cards?",
                                "fa": "کارت اعتباری قبول می‌کنید؟"
                            }
                        },
                        {
                            "source": "รับค่ะ/ครับ",
                            "wordIds": [ "รับ", "ค่ะ" ],
                            "translations": {
                                "en": "Yes, we do",
                                "fa": "بله قبول می‌کنیم"
