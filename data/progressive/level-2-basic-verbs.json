            "content": [
                {
                    "type": "paragraph",
                    "sentences": [
                        {
                            "source": "คุณชอบกินอะไรครับ",
                            "wordIds": [ "คุณ", "ชอบ", "กิน", "อะไร", "ครับ" ],
                            "translations": {
                                "en": "What do you like to eat?",
                                "fa": "چه چیزی دوست دارید بخورید؟"
                            }
                        },
                        {
                            "source": "ฉันชอบกินผลไม้ค่ะ",
                            "wordIds": [ "ฉัน", "ชอบ", "กิน", "ผลไม้", "ค่ะ" ],
                            "translations": {
                                "en": "I like to eat fruit",
                                "fa": "میوه دوست دارم بخورم"
                            }
                        },
                        {
                            "source": "แล้วคุณชอบดื่มอะไรครับ",
                            "wordIds": [ "แล้ว", "คุณ", "ชอบ", "ดื่ม", "อะไร", "ครับ" ],
                            "translations": {
                                "en": "And what do you like to drink?",
                                "fa": "و چه چیزی دوست دارید بنوشید؟"
                            }
                        },
                        {
                            "source": "ชอบดื่มชาค่ะ",
                            "wordIds": [ "ชอบ", "ดื่ม", "ชา", "ค่ะ" ],
                            "translations": {
                                "en": "I like to drink tea",
                                "fa": "چای دوست دارم"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "sectionId": "level2-conv-2",
            "heading": {
                "en": "Conversation 2: Ordering Food",
                "th": "บทสนทนา 2: สั่งอาหาร",
                "fa": "مکالمه ۲: سفارش غذا"
            },
            "content": [
                {
                    "type": "paragraph",
                    "sentences": [
                        {
                            "source": "สวัสดีครับ ขอข้าวผัดหน่อยครับ",
                            "wordIds": [ "สวัสดี", "ครับ", "ขอ", "ข้าว", "ผัด", "หน่อย", "ครับ" ],
                            "translations": {
                                "en": "Hello, can I have fried rice please?",
                                "fa": "سلام، برنج سرخ‌شده می‌خواهم لطفاً"
                            }
                        },
                        {
                            "source": "ได้ค่ะ กับอะไรคะ",
                            "wordIds": [ "ได้", "ค่ะ", "กับ", "อะไร", "คะ" ],
                            "translations": {
                                "en": "Certainly, with what?",
                                "fa": "حتماً، با چه چیزی؟"
                            }
                        },
                        {
                            "source": "กับไก่ครับ",
                            "wordIds": [ "กับ", "ไก่", "ครับ" ],
                            "translations": {
                                "en": "With chicken",
                                "fa": "با مرغ"
                            }
                        },
                        {
                            "source": "และขอน้ำเปล่าหนึ่งขวดครับ",
                            "wordIds": [ "และ", "ขอ", "น้ำ", "เปล่า", "หนึ่ง", "ขวด", "ครับ" ],
                            "translations": {
                                "en": "And one bottle of water please",
                                "fa": "و یک بطری آب لطفاً"
                            }
                        },
                        {
                            "source": "ได้ค่ะ อร่อยแน่นอนค่ะ",
                            "wordIds": [ "ได้", "ค่ะ", "อร่อย", "แน่นอน", "ค่ะ" ],
                            "translations": {
                                "en": "Certainly, it will be delicious",
                                "fa": "حتماً، خوشمزه خواهد بود"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "sectionId": "level2-conv-3",
